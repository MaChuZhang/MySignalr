<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorAccent">@color/color_white</item>
    <item name="android:textColorHint">@color/color_d1d1d1</item>
    <item name="colorControlNormal">@color/color_d1d1d1</item>
    <item name="colorControlActivated">@color/color_white</item>
</style>
  <style name="menu_item">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:button">@null</item>
    <item name="android:gravity">center</item>
    <item name="android:paddingTop">3dp</item>
    <item name="android:textColor">@drawable/menu_textColor</item>
    <item name="android:textSize">18sp</item>
  </style>
</resources>
